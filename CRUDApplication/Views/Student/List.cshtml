@model IEnumerable<Student>
@{
	ViewData["Title"] = "Students Records";
}

<h2>Students List</h2>

<div class="d-flex justify-content-between align-items-center mb-2">

	<a class="btn btn-primary" asp-action="Create"> <i class="bi bi-plus-circle me-1"></i>Add Student</a>

	<form method="get" asp-action="List" class="d-flex gap-2">
	<select name = "search" class="form-control">
		<option value="">Search</option>
		<option value="FName">First Name </option>
		<option value="LName">Last Name </option>
		<option value="Email">Email </option>
		<option value="DepartmentName">Department Name </option>
		<option value="SectionName">Section Name </option>

	</select>
	<input type="text" name="value" class="form-control"/>
	<button type="submit" class="btn btn-success">Search</button>
	<a asp-action="List" class="btn btn-danger">Clear</a>
	</form>
</div>

<table class="table table-bordered text-center ">
	<thead class="thead-light">
		<tr>
			<th>First Name</th>
			<th>Middle Name</th>
			<th>Last Name</th>
			<th>Department</th>
			<th>Section</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var student in Model)
		{
			<tr>
					<td>@student.FName</td>
					<td>@student.MName</td>
					<td>@student.LName</td>
					<td>@student.DepartmentName</td>
					<td>@student.SectionName</td>
					<td>@student.Email</td>

				<td class="text-center">
					<div class="d-flex justify-content-center align-items-center gap-2">

						<a asp-action="Edit" asp-route-id="@student.StudentsID" class="btn btn-primary"><i class="bi bi-pencil me-1"></i> Edit </a>
							
					
						<form asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@student.StudentsID" 
						method="POST" onsubmit="return confirm('Are you sure you want to delete?');">
							<button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i> Delete</button>
						</form>
					
					</div>
				</td>
			</tr>
		}
	</tbody>

</table>