@model Student

@{
	ViewData["Title"] = "Edit super Students";
}

<h2>Edit Student Information</h2>

<form method="post" asp-action="UpdateStudent">
	<input type = hidden asp-for="StudentsID" />

	<div class="form-group">
		<label>First Name</label>
		<input asp-for="FName" class="form-control" />

	</div>

	<div class="form-group">
		<label>Middle Name</label>
		<input asp-for="MName" class="form-control" />

	</div>

	<div class="form-group">
		<label>Last Name</label>
		<input asp-for="LName" class="form-control" />

	</div>

	<div class="form-group">
		<label asp-for="DepartmentID" class="control-label"> Department Name </label>
		<select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.Departments">
			<option value="">--SELECT DEPARTMENT--</option>
		</select>

	</div>

	<div class="form-group">
		<label asp-for="ClassID" class="control-label">Section Name</label>
		<select asp-for="ClassID" class="form-control" asp-items="ViewBag.Classes">
			<option value="">--SELECT SECTION--</option>
		</select>
	</div>

	<div class="form-group">
		<label>Email</label>
		<input asp-for="Email" class="form-control" />
	</div>


	<button type="submit" class="btn btn-primary mt-5">Update</button>
</form>